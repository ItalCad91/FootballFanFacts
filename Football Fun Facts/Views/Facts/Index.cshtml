@model IEnumerable<Football_Fun_Facts.Models.Facts>

<body style="">

    <h1 style="color:cornflowerblue; font-family:'Yu Gothic'">List of Football Facts!</h1>

    <p>
        <a style="text-decoration:none; color:maroon; font-family:'Yu Gothic'; font-size:15px;" asp-action="Create">Add a Fact</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FactQuestion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FactQuestion)
                    </td>
                    <td>
                        <a style="text-decoration:none; text-align:center; color:cornflowerblue; font-family:'Yu Gothic'" asp-action="Details" asp-route-id="@item.Id">Check Answer!</a>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</body>
